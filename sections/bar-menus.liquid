<div class="w-full relative grid grid-cols-1 grid-rows-1 overflow-clip" id="menu" x-data="barMenus">
  <div class="contents" id="menu-container"></div>

  <div class="absolute top-0 left-0 w-full h-full lg:grid lg:grid-cols-2 pointer-events-none text-bone">
    <div class="w-full h-auto aspect-[393/487] lg:aspect-auto lg:h-screen lg:pt-[160px] p-4 lg:pr-0 flex items-center lg:items-start lg:top-0 lg:sticky">
      <div class="w-full flex flex-col gap-y-8">
        <h2 class="text-[24px] leading-[1.2] font-serif">Menu</h2>
        {% assign menus = 'Drinks,Daytime,Evening' | split: ',' %}
        <ul class="flex flex-col">
          {% for menu in menus %}
            <li class="contents">
              {% assign handle = menu | handleize %}
              <button
                @click="setMenu('{{ handle }}')"
                :disabled="menu === '{{ handle }}'"
                title="{{ menu }}"
                class="w-full text-[24px] leading-[1.2] font-serif grid grid-cols-10 gap-3 text-left pointer-events-auto hover:opacity-50 duration-300 ease-linear disabled:opacity-100"
              >
                <p class="col-span-1 font-droulers text-[22px] leading-[30px]">0{{ forloop.index }}</p>
                <p
                  class="col-span-9"
                  :class="
                    {
                      'underline decoration-1 underline-offset-[3px]': menu === '{{ handle }}'
                    }
                  "
                >
                  {{ menu }}
                </p>
              </button>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="absolute bottom-0 top-0 lg:relative w-full">
      <div
        class="w-full absolute top-0 left-0 bottom-0 after:bar-menu-bottom-gradient lg:before:bar-menu-top-gradient"
      ></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bar Menus",
  "class": "contents",
  "presets": [
    {
      "name": "Bar Menus"
    }
  ]
}
{% endschema %}
