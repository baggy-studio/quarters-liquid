{% schema %}
    {
      "name": "FAQ Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "ORDERS + SHIPPING"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ],
      "blocks": [
        {
          "type": "faq_item",
          "name": "FAQ Item",
          "settings": [
            {
              "type": "text",
              "id": "question",
              "label": "Question"
            },
            {
              "type": "richtext",
              "id": "answer",
              "label": "Answer"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "FAQ Category",
          "category": "Content",
          "blocks": [
            {
              "type": "faq_item"
            }
          ]
        }
      ]
    }
    {% endschema %}


<div id="utility" class="utility-content md:mt-4 md:pt-[48px] py-[64px] md:pb-[80px] grid grid-cols-10 gap-x-3">
    <div class="md:col-start-2 md:col-span-9 col-span-10">
        <div class="faq-categories mb-6">
            <span class="faq-category underline-none">{{ section.settings.title }}</span>
        </div>
    </div>
    <div class="md:col-start-2 md:col-span-9 col-span-10">
      <div class="faq-items" x-data="{ openSection: null }">
        {% for block in section.blocks %}
          {% if block.type == 'faq_item' %}
            <div id="{{ block.id }}" class="faq-item">
              <button 
                @click="openSection = openSection === '{{ block.id }}' ? null : '{{ block.id }}'" 
                class="faq-question body-sans w-full text-left flex items-start justify-between py-3 border-b border-current"
              >
                <span class="medium-serif">{{ block.settings.question }}</span>
                <span x-text="openSection === '{{ block.id }}' ? '-' : '+'"></span>
              </button>
              <div
                x-show="openSection === '{{ block.id }}'"
                x-collapse.duration.300ms
                class="faq-answer medium-serif py-3"
              >
                {{ block.settings.answer }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
</div>