<header :style="`--header-theme: ${headerColor}`" class="fixed left-0 w-full top-0 h-max z-10 p-4 transition-colors ease-linear duration-200 group" :class="{
  'is-menu': menu,
}">
  <nav aria-label="Main Navigation" class="w-full flex items-start justify-between relative">
    <ul class="hidden lg:flex items-center gap-16">
      {% for link in section.settings.menu.links %}
        {% unless link.title == 'Mobile Only' %}
          <li class="contents">
            {% if forloop.first %}
              <button
                @click="toggleMenu"
                title="Shop"
                class="nav-link group-[.is-menu]:opacity-100"
              >
                {{ link.title }}
              </button>
            {% else %}
              <a 
                title="{{ link.title }}"
                href="{{ link.url }}"
                class="nav-link group-[.is-menu]:opacity-50 group-[.is-menu]:delay-200 group-[.is-menu]:hover:delay-0 group-[.is-menu]:hover:opacity-100"
              >
                {{- link.title -}}
              </a>
            {% endif %}
          </li>
        {% endunless %}
      {% endfor %}
    </ul>
    <button
      @click="toggleMenu"
      title="Toggle Menu"
      class="lg:hidden nav-link"
    >
      Menu
    </button>
    <button title="Bag" @click="$store.cart.open" class="nav-link group-[.is-menu]:opacity-50 group-[.is-menu]:delay-200 group-[.is-menu]:hover:delay-0 group-[.is-menu]:hover:opacity-100">
      Bag (
      {{- cart.item_count -}}
      )
    </button>
    <h1 class="flex items-start absolute top-0 left-0 w-full h-full justify-center pointer-events-none">
      <a href="/" title="Quarters" class="relative h-[22px] lg:h-[31px] w-[138px] lg:w-[185px] group-[.is-menu]:delay-300 delay-500 transition-opacity duration-300 ease-linear
        {% if section.settings.hideHomepageHeader and template == 'index' %}
          opacity-0 pointer-events-none
        {% else %}
          pointer-events-auto
        {% endif %}
        "
        {% if section.settings.hideHomepageHeader %}
        :class="{
          'opacity-0': activeUrl == '/' && !menu,
          'pointer-events-auto': activeUrl !== '/' || menu
        }"
        {% endif %}
      >
        <svg class="fill-current h-full text-bone-tint aspect-[185/31] shrink-0">
          <use xlink:href="#wordmark"></use>
        </svg>
        <svg class="absolute w-full h-full top-0 left-0 fill-current text-mahogany aspect-[185/31] shrink-0">
          <use xlink:href="#wordmark"></use>
        </svg>
      </a>
    </h1>
  </nav>
</header>

{% schema %}
{
  "name": "Header",
  "class": "contents",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu"
    },
    {
      "type": "checkbox",
      "id": "hideHomepageHeader",
      "label": "Hide Header on Homepage",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
