<div id="page-settings" class="contents">
  <style>
      :root {
        --text-color: {{ section.settings.textColor }};
        --background-color: {{ section.settings.backgroundColor }};
        --footer-text-color: {{ section.settings.footerTextColor }};
        --footer-background-color: {{ section.settings.footerBackgroundColor }};

        {% if section.settings.headerTheme == 'light' %}
          --header-theme: #F4EED0;
        {% else %}
          --header-theme: #643600;
        {% endif %}
      }
      
      body, body > *, .body-bg {
        color: var(--text-color) !important;
        background-color: var(--background-color) !important;
      }

      footer > *, footer div, footer .logo-bg {
        color: var(--footer-text-color) !important;
        background-color: var(--footer-background-color) !important;
      }


      {% if template == 'page.hours-info' or template == 'page.faq' or template == 'page.shipping' or template == 'page.legal' or template == 'page.privacy' %}
        body::before {
          content: '';
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          height: 120px;
          background: linear-gradient(to bottom, var(--background-color) 0%, transparent 100%);
          pointer-events: none;
          z-index: 1;
        }
      {% endif %}
  </style>
</div>

{% schema %}
{
  "name": "Page Settings",
  "class": "contents",
  "settings": [
    {
      "type": "select",
      "id": "headerTheme",
      "label": "Initial Navigation Theme",
      "options": [
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" }
      ],
      "default": "dark"
    },
    {
      "type": "color",
      "id": "textColor",
      "label": "Text Color",
      "default": "#643600"
    },
    {
      "type": "color",
      "id": "backgroundColor",
      "label": "Background Color",
      "default": "#FAF8EC"
    },
    {
      "type": "color",
      "id": "footerTextColor",
      "label": "Footer Text Color",
      "default": "#FAF8EC"
    },
    {
      "type": "color",
      "id": "footerBackgroundColor",
      "label": "Footer Background Color",
      "default": "#643600"
    }
  ],
  "presets": [
    {
      "name": "Page Settings"
    }
  ]
}
{% endschema %}