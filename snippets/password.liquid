<div class="h-screen w-full flex items-center justify-center">
  {% form 'storefront_password' %}
    {{ form.errors | default_errors }} 
    <div class="relative flex h-11 w-full items-center justify-between border-2 rounded-xl border-current px-4">
      <input
        type="password"
        name="password"
        required
        class="peer font-jubilee text-[18px] h-full w-full text-left placeholder:text-brown text-brown rounded-none bg-transparent focus:outline-none"
        placeholder="Password"
      >
      <button
        :disabled="success || error || loading"
        aria-label="Submit form"
        type="submit"
        value="Access Storefront"
        :class="
          {
              'disabled:cursor-wait': loading,
              'disabled:cursor-not-allowed': error || success
          }
        "
        class="p3-futura lg:p3-futura cursor-pointer shrink-0 group-invalid:cursor-not-allowed hover:opacity-30 duration-300 ease-in-out"
      >
        Access Storefront
      </button>
    </div>
  {% endform %}
</div>