{% assign designer = product.metafields.custom.designer %}
{% assign producer = product.metafields.custom.producer %}
{% assign origin = product.metafields.custom.origin %}
{% assign period = product.metafields.custom.period %}
{% assign material = product.metafields.custom.material %}
{% assign finish = product.metafields.custom.finish %}
{% assign dimensions = product.metafields.custom.dimensions %}
{% assign weight = product.metafields.custom.weight %}
{% assign volume = product.metafields.custom.volume %}
{% assign lead_time = product.metafields.custom.lead_time %}
{% assign notes = product.metafields.custom.notes %}
{% assign tear_sheet = product.metafields.custom.product_tearsheet %}

{% if selected_variant.metafields.custom.designer %}
  {% assign designer = selected_variant.metafields.custom.designer %}
{% endif %}

{% if selected_variant.metafields.custom.producer %}
  {% assign producer = selected_variant.metafields.custom.producer %}
{% endif %}

{% if selected_variant.metafields.custom.origin %}
  {% assign origin = selected_variant.metafields.custom.origin %}
{% endif %}

{% if selected_variant.metafields.custom.period %}
  {% assign period = selected_variant.metafields.custom.period %}
{% endif %}

{% if selected_variant.metafields.custom.material %}
  {% assign material = selected_variant.metafields.custom.material %}
{% endif %}

{% if selected_variant.metafields.custom.finish %}
  {% assign finish = selected_variant.metafields.custom.finish %}
{% endif %}

{% if selected_variant.metafields.custom.dimensions %}
