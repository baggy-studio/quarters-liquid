<div id="product-price" class="flex flex-col">
  {% if selected_variant.available == false or product.tags contains 'OOAK' and selected_variant.inventory_quantity == 0 %}
    {% render 'product-status', type: 'sold-out', large: true, product: product %}
  {% elsif selected_variant.available and product.tags contains 'Hold' %}
    {% unless product.tags contains 'HidePrice' %}
      {% if selected_variant.compare_at_price > 0 %}
        <div class="flex flex-col">
          <p class="large-accent strike-through relative opacity-50">{{ selected_variant.compare_at_price | money }}</p>
          <p class="large-accent">{{ selected_variant.price | money }}</p>
        </div>
      {% else %}
        <p class="large-accent">{{ selected_variant.price | money }}</p>
      {% endif %}
    {% endunless %}
    {% if product.tags contains 'Hold' %}
      {% render 'product-status', type: 'on-hold', large: true, product: product %}
    {% endif %}
  {% elsif selected_variant.available %}
    {% unless product.tags contains 'HidePrice' %}
      {% if selected_variant.compare_at_price > 0 %}
        <div class="flex flex-col">
          <p class="large-accent strike-through relative opacity-50">{{ selected_variant.compare_at_price | money }}</p>
          <p class="large-accent">{{ selected_variant.price | money }}</p>
        </div>
      {% else %}
        <p class="large-accent">{{ selected_variant.price | money }}</p>
      {% endif %}
    {% endunless %}
  {% endif %}
</div>
